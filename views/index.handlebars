<h1>Eat-Da-Burger!</h1>
<div class="container">

    <div class="row">
        <div class="jumbotron col-6" style="background-color: lightblue">
            <h2>Available Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="devour-btn" data-id="{{id}}">Devour it!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="jumbotron col-6" style="background-color: lightgreen">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

        <h2>Add a Burger</h2>
        <hr>
        <form class="create-form">
            <div class="form-group">
                <label for="newBurger">Enter a new burger:</label>
                <input type="text" id="newBurger" name="name">
            </div>
            <button type="submit">Add burger</button>
        </form>

    </div>
</div>